{
  "globals": {
    "window": true,
    "document": true,
    "dispatcher": true,
    "console": true,
    "fetch": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "plugin:jest/recommended",
    "plugin:prettier/recommended"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": ["prettier", "import", "lodash", "react", "jest"],
  "rules": {
    "prettier/prettier": "error",

    // Basic
    "eol-last": [1, "always"],
    "no-children-prop": [0],
    "no-console": [1, { "allow": ["warn", "error"] }],
    "no-duplicate-imports": [2],
    "no-else-return": [1],
    "no-extra-bind": [1],
    "no-inline-comments": [1],
    "no-lone-blocks": [1],
    "no-lonely-if": [2],
    "no-loop-func": [1],
    "no-multi-assign": [1],
    "no-negated-condition": [1],
    "no-nested-ternary": [1],
    "no-self-compare": [1],
    "no-sequences": [2],
    "no-throw-literal": [1],
    "no-undef-init": [1],
    "no-unneeded-ternary": [1],
    "no-unused-expressions": [1],
    "no-unused-vars": [
      1, { "ignoreRestSiblings": true }
    ],
    "no-useless-concat": [1],
    "no-useless-rename": [1],
    "no-useless-return": [1],
    "no-var": [1],
    "object-shorthand": [1],
    "prefer-arrow-callback": [1],
    "prefer-const": [1],
    "prefer-spread": [1],
    "sort-vars": [1],
    "space-infix-ops": [1],
    "strict": [1, "never"],

    // Import
    "import/named": [2],
    "import/order": [2],

    // Lodash
    "lodash/callback-binding": [1],
    "lodash/collection-return": [1],
    "lodash/no-double-unwrap": [1],
    "lodash/no-extra-args": [1],
    "lodash/no-unbound-this": [1],
    "lodash/chaining": [2, "never"],
    "lodash/identity-shorthand": [1],
    "lodash/matches-prop-shorthand": [1],
    "lodash/matches-shorthand": [1],
    "lodash/prefer-compact": [1],
    "lodash/prefer-flat-map": [1],
    "lodash/prefer-map": [1],
    "lodash/prefer-reject": [1],
    "lodash/preferred-alias": [1],
    "lodash/prefer-get": [1],
    "lodash/prefer-includes": [1],
    "lodash/prefer-is-nil": [1],
    "lodash/prefer-lodash-method": [1, {"ignoreMethods": ["find"]}],
    "lodash/prefer-lodash-typecheck": [1],
    "lodash/prefer-matches": [1],
    "lodash/prefer-noop": [1],
    "lodash/prefer-over-quantifier": [1],
    "lodash/prefer-some": [1],
    "lodash/prefer-startswith": [1],
    "lodash/prefer-times": [1],

    // React
    "react/prop-types": [1, { "skipUndeclared": true }],

    // JSX
    "react/jsx-key": [2],
    "react/jsx-no-comment-textnodes": [1],
    "react/jsx-no-duplicate-props": [2],
    "react/jsx-no-target-blank": [2],
    "react/jsx-no-undef": [2],
    "react/jsx-uses-react": [1],
    "react/jsx-uses-vars": [1]
  },
  "overrides": [
    {
      "files": ["*.test.js", "setupTests.js", "webpack.*.config.babel.js"],
      "env": {
        "jest/globals": true
      },
      "rules": {
        "jest/prefer-to-have-length": "off",
        "jest/no-focused-tests": "warn",
        "react/react-in-jsx-scope": "off",
        "lodash/prefer-lodash-method": "off",
        "lodash/prefer-noop": "off",
        "no-undef": "off",
        "array-bracket-newline": "off"
      }
    }
  ]
}
